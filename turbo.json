{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "serve": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "prisma": {
      "cache": false
    },
    "create-migration": {
      "cache": false
    },
    "migrate": {
      "cache": false
    },
    "push": {
      "cache": false
    },
    "generate": {
      "cache": false
    },
    "studio": {
      "cache": false,
      "persistent": true
    },
    "reset": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
